{% extends 'app/base.html.twig' %}

{% block PageTitle %}Ticket #{{ ticket.id }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Object</th>
                <td>{{ ticket.object }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ ticket.message }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ ticket.status ? 'Ouvert' : 'Fermé' }}</td>
            </tr>
        </tbody>
    </table>

    {% if ticket.status == true %}
        <a href="{{ path('app_ticket_edit', {'id': ticket.id}) }}" class="btn btn-primary">Modifier</a>

        <hr>

        {{ include('app/ticket/_delete_form.html.twig') }}
    {% endif %}

    <div class="card">
        <div class="card-body">
            Soyez gentils avec les admins.
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4>John Admin à répondu le jeudi 28 juin 2018</h4>
            <p>oui</p>
        </div>
    </div>
{% endblock %}