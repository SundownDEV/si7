{% extends 'app/base.html.twig' %}

{% block PageTitle %}Monitoring du module #{{ module.id }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-3">
            <div class="card bg-info-dark p-20">
                <div class="media widget-ten">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-thermometer f-s-40"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2 class="color-white">{{ module.temperature }}°</h2>
                        <p class="m-b-0">Température</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning p-20">
                <div class="media widget-ten">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-circle-notch f-s-40"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2 class="color-white">{{ module.oxygen }} %</h2>
                        <p class="m-b-0">Oxygène</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success p-20">
                <div class="media widget-ten">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-solar-panel f-s-40"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2 class="color-white">{{ module.energy }}</h2>
                        <p class="m-b-0">Énergie</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info p-20">
                <div class="media widget-ten">
                    <div class="media-left meida media-middle">
                        <span><i class="fa fa-coins f-s-40"></i></span>
                    </div>
                    <div class="media-body media-text-right">
                        <h2 class="color-white">0.03251 BTC</h2>
                        <p class="m-b-0">Minage de StellarCoin</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ module.id }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ module.temperature }}°</td>
            </tr>
            <tr>
                <th>Oxygen</th>
                <td>{{ module.oxygen }} %</td>
            </tr>
            <tr>
                <th>Energy</th>
                <td>{{ module.energy }}</td>
            </tr>
            <tr>
                <th>Date de mise en service</th>
                <td>{{ module.CreationDate ? module.CreationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}